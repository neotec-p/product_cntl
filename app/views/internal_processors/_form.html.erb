<div id="main" style="width:800px;">

    <%= raw main_title %>
    <%= raw flash_tag %>

    <%= form_for(@internal_processor) do |f| %>

    <%= @internal_processor.errors.full_messages.join("<br>") %>

    <p><font color="red" style="margin-left:5px;">*</font><%= t(:notice_required) %></p>

    <div class="sheet">
        <h4><%= hlabel_model(get_model_by_controller({})) %></h4>
        <table class="commonSheet">
            <tr>
                <th>
                    <%= hlabel :processor, :id %>
                </th>
                <td>
                    <%= @internal_processor.id %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= hlabel :trader, :name %><font class="mark-required" style="margin-left:5px;">*</font>
                </th>
                <td>
                    <%= f.text_field :name, :size => 25 %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= hlabel :trader, :zip_code %>
                </th>
                <td>
                    <%= f.text_field :zip_code, :size => 25  %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= hlabel :trader, :address %>
                </th>
                <td>
                    <%= f.text_field :address, :size => 50  %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= hlabel :trader, :tel %>
                </th>
                <td>
                    <%= f.text_field :tel, :size => 25  %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= hlabel :trader, :fax %>
                </th>
                <td>
                    <%= f.text_field :fax, :size => 25  %>
                </td>
            </tr>
            <tr>
                <th>
                    <%= hlabel :trader, :addition_attr3 %>
                </th>
                <td>
					<%= f.check_box :addition_attr3, :value => FLAG_OFF %><%= t(:addition_process_expense) %>
                </td>
            </tr>
        </table>
    </div><!--/ sheet-->

    <%= f.hidden_field :lock_version %>

    <div class="control">
        <%= yield :control %>
    </div><!--/ control-->

    <% end %>
</div><!--/ #main-->
