<div id="main">
	<%= raw main_title(:action => :csv_import) %>

	<%= raw flash_tag %>

	<div class="commonBtnArea">
		<%= form_tag({ :action => :multi_import_update }, { :multipart => true, :method => :post }) do  %>
		<h4><%= hlabel :commons, :upload_file %></h4>
		<%= note t(:notice_import_only) %><br>

		<div class="table-layout">
			<div class="left" style="width: 600px;">
				<%= file_field_tag :file %>
				<%= submit_tag t(:button_import), :confirm => t(:confirm_import) %>
			</div><!--/ left -->

			<div class="right" style="width: 200px; vertical-align:top; text-align: right;">
				<%= link_to t(:notice_calendar_master_template), CALENDARS_CSV_TEMPLATE_PATH %>
			</div><!--/ rigth -->
		</div><!--/ table-layout -->

		<% end %>
		
	</div><!--/ commonBtnArea-->
	<br/>

	<%= error_messages_for 'calendar', :object => @import_calendars %>

	<div class="control">
		<%= cancel_button_tag %>
	</div><!--/ control-->

</div><!--/ #main-->
