<%
id_material_id = "material_edit_material_id"
id_material_id = params[:id_material_id] unless params[:id_material_id].blank?
id_material_name = "material_name"
id_material_name = params[:id_material_name] unless params[:id_material_name].blank?
%>

<% content_for :add_js do %>
function set_parent(id, name){
	if(!confirm('<%= t(:confirm_set_material) %>')){
		return;
	}
	
	window.opener.$("<%= "##{id_material_id}" %>").val(id);
	window.opener.$("<%= "##{id_material_name}" %>").text(name);
	
	window.close();
}
<% end %>

<%= render :partial => 'pop_stock_index', :locals => {:target_action => :pop_material_for_text} %>
