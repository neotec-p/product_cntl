<% material = @material if material.nil? %>
<% title = t("activerecord.models.material") if title.nil? %>

<div class="sheet">
    <h4><%= title %></h4>
    <table class="commonSheet">
        <tr>
            <th style="width: 75px;">
                <%= hlabel :material, :standard %>
            </th>
            <td style="width: 150px;">
                <%= material.standard %>
            </td>
            <th style="width: 75px;">
                <%=hlabel :material, :diameter %>
            </th>
            <td style="width: 150px;">
                <%= material.diameter %>
            </td>
            <th style="width: 75px;">
                <%=hlabel :material, :surface %>
            </th>
            <td style="width: 150px;">
                <%= material.surface %>
            </td>
            <th style="width: 75px;">
                <%= hlabel :material, :unit_price %>
            </th>
            <td class="number" style="width: 150px;">
				<%= hnumber_with_precision(material.unit_price, :precision => 3) %>
            </td>
        </tr>
    </table>
    <!--/ sheet-->
</div>
